<canvas id="myCanvas" width="500" height="1000" style="border:0px solid #D3D3D3;">
    </canvas>
<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Rfc</th>
      <th>Empresa</th>
      <th>Password</th>
      <th>Passwordc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <script type="text/javascript">
    localStorage.clear();
    var i=0;
  </script>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td id="email"><%= usuario.email %></td>
        <td id="rfc"><%= usuario.rfc %></td>
        <td id="empresa"><%= usuario.empresa %></td>
        <td id="password"><%= usuario.password %></td>
        <td><%= usuario.passwordC %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <script type="text/javascript">
          localStorage.setItem("uemail"+i, document.getElementById("email").innerText);
          localStorage.setItem("urfc"+i, document.getElementById("rfc").innerText);
          localStorage.setItem("uempresa"+i, document.getElementById("empresa").innerText);
          localStorage.setItem("upassword"+i, document.getElementById("password").innerText);
          document.getElementById("email").remove();
          document.getElementById("rfc").remove();
          document.getElementById("empresa").remove();
          document.getElementById("password").remove();
          i++;
        </script>

      </tr>
    <% end %>

    

    
  </tbody>
</table>

